<form method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Möchten Sie dieses Element wirklich löschen?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger btn m-3">Löschen</button>
</form>
