{% extends 'base_admin.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Order{% endblock %}

{% block body %}
<section class="blockAdmin">
    <h1 class="title text-center mb-5 mt-xxl-5">Carrier</h1>
    <div class="container">
        <table class="table table-responsive-lg text-dark">
            <tbody>
            <tr>
                <th>Carrier Name</th>
                <td>{{ order.carrierName }}</td>
            </tr>
            <tr>
                <th>Carrier Price</th>
                <td>{{ order.carrierPrice }}</td>
            </tr>
            <tr>
                <th>Delivery</th>
                <td>{{ order.delivery |raw }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ order.createAt ? order.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPaid</th>
                <td>{{ order.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="col btn btn-primary mb-sm-2 mb-2 btn"href="{{ path('app_admin_order_index') }}">back to list</a>

    <a href="{{ path('app_admin_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('admin/order/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
