{% extends 'base_admin.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Order{% endblock %}

{% block body %}
<section class="blockAdmin">
    <h1 class="title text-center mb-5 mt-xxl-5">Order</h1>
    <div class="m-5">
        <div class="row">
        <div class="col-mb-6">
            <table class="table table-responsive-lg text-dark">
                <tbody>
                <tr>
                    <th>Carrier Name</th>
                    <td>{{ order.carrierName }}</td>
                </tr>
                <tr>
                    <th>Delivery</th>
                    <td>{{ order.delivery |raw }}</td>
                </tr>
                <tr>
                    <th>CreateAt</th>
                    <td>{{ order.createAt ? order.createAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>IsPaid</th>
                    <td>{{ order.isPaid ? 'Yes' : 'No' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-6 ">
            <table class="table table-responsive-lg text-dark">
                <thead class="thead-light text-center">
                <tr>
                    <th>Produkt</th>
                    <th>Quantity</th>
                </tr>
                </thead>
                <tbody>
                {% for order in order.orderdetails %}
                <tr>
                    <td>{{ order.product }}</td>
                    <td class="text-center">{{ order.quantity }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    <a class="col btn btn-primary mb-5 mt-5 btn btn-dark" href="{{ path('app_admin_order_index') }}">back to list</a>

    <a class="col btn btn-primary mb-5 mt-5 btn btn-secondary" href="{{ path('app_admin_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('admin/order/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
