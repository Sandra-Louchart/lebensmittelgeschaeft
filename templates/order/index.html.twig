{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('product') }}

{% endblock %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
<section class="blockBody">
        <h2>Mon recapitulatif</h2>
        <p>Verififer vos info avant de payer</p>
        <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}
                <a href="{{ path('app_account_add_address') }}">Ajouter une nouvelle adresse</a>

                {{ form_end(form) }}

            {% endset %}
            {{ formHtml | replace ({'[br]': '<br/>'}) | raw }}
        </div>
        <div class="col-md-6">
            <h2>Le recapitulatif de votre commande</h2>
            {% for product in cart %}
                <div class="col row">
                    <div class="col-6">
                        {{ product.product.name }}
                    </div>
                    <div class="col-6">
                       x {{ product.quantity }}
                    </div>
                </div>
            {% endfor %}
        </div>


    </div>
</section>
{% endblock %}
