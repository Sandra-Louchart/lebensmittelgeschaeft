{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('product') }}

{% endblock %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
<section class="blockBody">
        <h2>Je passe ma commande</h2>
        <p>Choissisez vos preferences avant de passer commande</p>
        <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                {{ form_end(form) }}

            {% endset %}
            {{ formHtml | replace ({'[br]': '<br/>'}) | raw }}
        </div>
        <div class="col-md-6">
            {% for product in cart %}
                <div class="col row">
                    <div class="col-6">
                        {{ product.product.name }}
                    </div>
                    <div class="col-6">
                       x {{ product.quantity }}
                    </div>
                </div>
            {% endfor %}
            <b>Bouton payer</b>
        </div>


    </div>
</section>
{% endblock %}
