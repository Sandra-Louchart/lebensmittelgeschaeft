{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('product') }}


{% endblock %}


{% block body %}
<section class="blockBody">
    <h1>Votre panier </h1>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity }}</td>
                    <td>
                        <a href="{{ path('app_delete_cart', {'id': item.product.id}) }}" class="btn btn-sm btn-danger">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="4" class="text-right">
                    Total :
                </th>
                <th>{{ total }}</th>
                <th></th>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}
</section>
{% endblock %}
