{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('product') }}

{% endblock %}

{% block title %}Products{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-8 col-lg-6">
            <div class="header">
                <h2>Unserer Products</h2>
            </div>
        </div>
    </div>
<div class="container-fluid pt-5 text-center">
    <div class="row justify-content-around">
        {% for product in products %}

        <div class="card my-2 d-flex align-items-center">
            <img src="/images/products/{{ product.pictureName }}" alt="{{ product.name }}" class="img-thumbnail rounded float-start">
            <div class="card-body">
                <h2 class="titreH2">{{ product.name }}</h2>
                <h2 class="titreH2">{{ product.subtitle }}</h2>
                <h2 class="titreH2">{{ product.price }}</h2>

            </div>
        </div>
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}
